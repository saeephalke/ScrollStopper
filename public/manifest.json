{
  "name": "Scroll Stopper",
  "description": "React Chrome Extension that gets you to stop scrolling instagram and youtube shorts",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Scroll Stopper"
  },
  "permissions":[
    "tabs",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.youtube.com/shorts/*",
    "https://www.tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
} 